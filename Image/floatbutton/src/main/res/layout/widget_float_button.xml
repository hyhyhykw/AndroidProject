<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/ibtn_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_bg_selector"
        android:clickable="true"
        android:contentDescription="@string/wifi"
        android:src="@drawable/ic_add_normal"/>

    <ImageButton
        android:id="@+id/ibtn_bluetooth"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/ibtn_add"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@id/ibtn_add"
        android:background="@drawable/ic_bg_selector"
        android:clickable="true"
        android:contentDescription="@string/wifi"
        android:src="@drawable/ic_bluetooth_normal"/>

    <ImageButton
        android:id="@+id/ibtn_enhanced"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/ibtn_add"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/ibtn_add"
        android:background="@drawable/ic_bg_selector"
        android:clickable="true"
        android:contentDescription="@string/wifi"
        android:src="@drawable/ic_enhanced_normal"/>

    <ImageButton
        android:id="@+id/ibtn_highlight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/ibtn_add"
        android:layout_marginRight="80dp"
        android:layout_toLeftOf="@id/ibtn_add"
        android:background="@drawable/ic_bg_selector"
        android:clickable="true"
        android:contentDescription="@string/wifi"
        android:src="@drawable/ic_highlight_normal"/>

    <ImageButton
        android:id="@+id/ibtn_mail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/ibtn_add"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@id/ibtn_add"
        android:background="@drawable/ic_bg_selector"
        android:clickable="true"
        android:contentDescription="@string/wifi"
        android:src="@drawable/ic_mail_normal"/>

    <ImageButton
        android:id="@+id/ibtn_settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ibtn_add"
        android:layout_marginRight="40dp"
        android:layout_marginTop="70dp"
        android:layout_toLeftOf="@id/ibtn_add"
        android:background="@drawable/ic_bg_selector"
        android:clickable="true"
        android:contentDescription="@string/wifi"
        android:src="@drawable/ic_settings_normal"/>

    <ImageButton
        android:id="@+id/ibtn_wifi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ibtn_add"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/ibtn_add"
        android:background="@drawable/ic_bg_selector"
        android:clickable="true"
        android:contentDescription="@string/wifi"
        android:src="@drawable/ic_wifi_normal"/>


</RelativeLayout>