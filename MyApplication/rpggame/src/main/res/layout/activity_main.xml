<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/txt_new_game"
        style="@style/main_surface_txt_style"
        android:text="@string/txt_new_game" />

    <TextView
        android:id="@+id/txt_continue_game"
        style="@style/main_surface_txt_style"
        android:text="@string/txt_continue_game" />

    <TextView
        android:id="@+id/txt_setting"
        style="@style/main_surface_txt_style"
        android:text="@string/txt_setting" />

    <TextView
        android:id="@+id/txt_about"
        style="@style/main_surface_txt_style"
        android:text="@string/txt_about_game" />

</LinearLayout>