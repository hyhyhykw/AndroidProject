<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="main_bottom_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/dp_5</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/selector_txt_main</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>


    <style name="AppTheme.Button.EasyShop" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dp_20</item>
    </style>

    <style name="AppTheme.EditText.Big" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">@dimen/dp_6</item>
        <item name="android:paddingLeft">@dimen/dp_6</item>
        <item name="android:paddingRight">@dimen/dp_6</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textColor">@color/text_goods_name</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edit_bg_long</item>
    </style>
    <!--我的页面子条目样式-->
    <style name="fragment_me_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_60</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingLeft">@dimen/dp_20</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:textColor">@color/text_goods_name</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:layout_marginTop">@dimen/dp_6</item>
    </style>
</resources>
