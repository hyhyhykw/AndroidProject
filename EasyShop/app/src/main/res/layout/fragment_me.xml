<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_page"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="?attr/colorPrimaryDark"
        android:gravity="center"
        android:orientation="vertical">

        <com.pkmmte.view.CircularImageView
            android:id="@+id/iv_user_head"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:scaleType="centerInside"
            android:src="@drawable/user_ico"
            app:border="true"
            app:border_color="#16f5f5f5"
            app:border_width="@dimen/dp_6"
            app:selector="true"
            app:selector_color="#4D000000"
            app:selector_stroke_color="#16f5f5f5"
            app:selector_stroke_width="@dimen/dp_6"
            app:shadow="false"/>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/me_login_register"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_person_info"
        tools:ignore="RtlHardcoded"
        style="@style/fragment_me_item_style"
        android:drawableRight="@drawable/selector_item_go"
        android:text="@string/me_person_info"/>

    <TextView
        android:id="@+id/tv_person_goods"
        style="@style/fragment_me_item_style"
        tools:ignore="RtlHardcoded"
        android:drawableRight="@drawable/selector_item_go"
        android:text="@string/me_person_goods"/>


    <TextView
        android:id="@+id/tv_goods_upload"
        style="@style/fragment_me_item_style"
        android:drawableRight="@drawable/selector_item_go"
        android:text="@string/me_goods_upload"
        tools:ignore="RtlHardcoded"/>

</LinearLayout>
