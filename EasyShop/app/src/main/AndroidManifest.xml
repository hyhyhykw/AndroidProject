<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.zx.easyshop">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".EasyShopApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon,android:name">
        <activity
            android:name=".main.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".main.MainActivity"/>
        <activity android:name=".user.login.LoginActivity"/>
        <activity android:name=".user.register.RegisterActivity"/>
        <activity android:name=".main.me.personinfo.PersonActivity">
        </activity>
        <activity android:name=".main.me.personinfo.NicknameActivity">
        </activity>
        <activity android:name=".main.shop.detail.GoodDetailActivity">
        </activity>
        <activity android:name=".main.shop.detail.GoodDetailInfoActivity">
        </activity>
        <activity android:name=".main.me.persongoods.PersonGoodsActivity">
        </activity>
        <activity android:name=".main.me.goodsupload.GoodsUploadActivity">
        </activity>
        <activity android:name=".main.me.goodsupload.GoodsUploadImageShowActivity">
        </activity>
    </application>

</manifest>